{
  "Name": "Single VM Template",
  "Description": " This is a Single VM template.",
  "Version": "1.1.3",
  "Parameters": [
    {
      "Name": "Region",
      "Type": "String",
      "TypeHint": "AzureRegionName",
      "Description": "Name of Azure region."
    },
    {
      "Name": "CloudService",
      "Type": "String",
      "TypeHint": "AzureCloudServiceName",
      "Description": "Name of cs"
    },
    {
      "Name": "AffinityGroup",
      "Type": "String",
      "TypeHint": "AzureAffinityGroupName",
      "Description": "Name of Azure affinity group."
    },
    {
      "Name": "DiskStore",
      "Type": "String",
      "TypeHint": "AzureStorageName",
      "Description": "Name of ds"
    },
    {
      "Name": "ServerNamePrefix",
      "Type": "String",
      "TypeHint": "string",
      "Description": "Name of ds"
    }
  ],
  "Network": {
    "DnsServers": [],
    "LocalSites": [],
    "VirtualSites": []
  },
  "AffinityGroup": {
    "Name": "{{AffinityGroup}}",
    "Region": "{{Region}}"
  },
  "StorageAccounts": [],
  "CloudServices": [
    {
      "Name": "{{CloudService}}",
      "AffinityGroup": "{{AffinityGroup}}",
      "Region": "{{Region}}",
      "Description": "Brewmaster Single VM",
      "Deployment": {
        "VirtualMachines": [
          {
            "Name": "{{ServerNamePrefix}}",
            "RoleSize": "ExtraSmall",
            "AvailabilitySet": "vm-avset",
            "OsVirtualDisk": {
              "OsType": "Windows",
              "OsImageName": "a699494373c04fc0bc8f2bb1389d6106__Windows-Server-2012-R2-*"
            },
            "WindowsConfigSet": {
              "LocalAdminCredentialId": "vmadmin",
              "EnableAutomaticUpdates": false,
              "ChangePasswordAtLogon": false,
              "DisableRdp": false
            }
          }
        ],
        "DiskStorageAccount": "{{DiskStore}}",
        "RemoveUnreferencedVms": false
      }
    }
  ],
  "DeploymentGroups": [],
  "Credentials": [
    {
      "Name": "vmadmin",
      "UserName": "footest",
      "Password": "@Password1!"
    }
  ],
  "ConfigSets": [],
  "Configurations": []
}